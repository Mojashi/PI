    "version": "0.2.0",
    "configurations": [
        {
            "name": "test 接続",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/test",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        },
        {
            "name": "debug test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
             }
        },
        {
            "name": "debug pi",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pi",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}